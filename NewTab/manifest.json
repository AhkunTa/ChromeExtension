{
    "manifest_version": 2,
    "name": "NewTab",
    "version": "1.0.0",
    "description": "以一个个性化页面，替换原有chrome新建空白页",
    "icons":
    {
        "16": "./img/new-tab.png",
        "48": "./img/new-tab.png",
        "128": "./img/new-tab.png"
    },
    "permissions": [
        "storage",
        "https://cn.bing.com/*",
        "https://www.baidu.com/*",
        "https://www.sogou.com/suggnew/*",
        "https://www.google.com/*",
        "https://sug.so.360.cn/*",
        "https://api.bing.com/*",
        "https://v2.jinrishici.com/*",
        "https://duckduckgo.com/*",
        "https://www.dogedoge.com/*",
        "https://unsplash.com/*",
        "https://v1.hitokoto.cn/?encode=json",
        "contextMenus",
        "tabs"
    ],
    "background":
    {
        "persistent": false,
        "scripts": ["js/background.js"]
    },
    "homepage_url": "https://github.com/AhkunTa/ChromeExtension/tree/master/NewTab",
    "browser_action":
    {
        "default_title": "NewTab"
    },
    "chrome_url_overrides":
    {
        "newtab": "newtab.html"
    }

}